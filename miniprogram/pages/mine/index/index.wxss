/* 导航栏 */
.ellipse {
  width: 750rpx;
  height: 500rpx;
  margin-left: 0;
  margin-top: -150rpx;
  padding-top: 150rpx;
  border-radius: 250% / 50%;
}

/* 信息 */
.header{
  width: 100%;
  height: 300rpx;
}

.header .infor {
  height: 128rpx;
}

.header .avatar {
  margin-left: 275rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  border: 5rpx #66b5ff solid;
  box-shadow: 0rpx 0rpx 10rpx #66b5ff;
}

.header .infor .name {
  margin-top: 0rpx;
  width: 100%;
  font-weight: 1000;
  font-size: 40rpx;
  color: white;
  z-index: 999;
  text-align: center;
}

.header .infor .detail {
  margin-top: 10rpx;
  display: inline-block;
  width: 100%;
  font-size: 24rpx;
  z-index: 999;
  letter-spacing: 6rpx;
  font-weight: 500;
  color: #ebfffe;
  text-align: center;
}

/* 主体 */
.article{
  margin-top: 100rpx;
  padding: 0 50rpx
}

#btn,#btn2{
  width: 100%;
}

#btn2{
  display: block;
  height: 100rpx;
}

#btn2.l3{
  height: 160rpx;
  padding-top: 16rpx;
}

#btn2 .title{
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

#btn2 .desc{
  font-weight: 400;
}